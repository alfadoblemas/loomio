%section.proposals-card{role: 'region', aria-labelledby: 'proposals-card-heading'}
  %h2.card-title#proposals-card-heading{translate: 'discussion.proposals'}

  .proposals-card__proposals{ng_repeat: 'proposal in proposalsCard.discussion.proposals()'}
    .active-proposal{ng-if: 'proposalsCard.isExpanded(proposal)'}
      %proposal_expanded{proposal: 'proposal'}

    %h3{translate: 'discussion.previous_proposals', ng-show: "proposalsCard.discussion.proposals().length > 1"}

    .inactive-proposal{ng-if: '!proposalsCard.isExpanded(proposal)', ng_click: 'proposalsCard.selectProposal(proposal)'}
      %proposal_collapsed{proposal: 'proposal'}
